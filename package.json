{
	"name": "standarize",
	"version": "6.0.0",
	"description": "A simple CSS base",
	"author": "Iv√°n Barcia (https://barcia.dev)",
	"license": "MIT",
	"homepage": "http://barcia.github.io/standarize",
	"repository": "github:barcia/standarize",
	"bugs": "https://github.com/barcia/standarize/issues",
	"main": "dist/standarize.css",
	"browser": "dist/standarize.min.css",
	"files": [
		"LICENSE.md",
		"dist/standarize.css",
		"dist/standarize.min.css"
	],
	"type": "module",
	"scripts": {
		"lint": "stylelint src/*.css",
		"prebuild": "npm run lint",
		"build": "node .scripts/build.js",
		"publish:github": "npm publish --registry=https://npm.pkg.github.com",
		"prepublishOnly": "npm run build",
		"postpublish": "npm run publish:github"
	},
	"keywords": [
		"css",
		"base",
		"standarize",
		"normalize",
		"sanitize",
		"reset",
		"css reset"
	],
	"devDependencies": {
		"cssnano": "^5.1.4",
		"postcss": "^8.4.12",
		"postcss-import": "^14.0.2",
		"stylelint": "^14.6.0",
		"stylelint-config-standard": "^25.0.0"
	}
}
